package oopIntro;

public class Main {
	public static void main(String[] args) {
		
		Product product1 = new Product(1, "Lenova V14", 15000, "16 GB Ram", 10, 13500); //örnek oluþturma, referans oluþturma
		
		Product product2 = new Product(); //örnek oluþturma, referans oluþturma
		product2.id = 1;
		product2.name = "Lenova V15";
		product2.unitPrice = 13000;
		product2.detail = "16 GB Ram";
		product2.discount = 10;
		product2.unitPriceAfterDiscount = 11700;
		
		Product product3 = new Product(); //örnek oluþturma, referans oluþturma
		product3.id = 1;
		product3.name = "HP 5";
		product3.unitPrice = 16000;
		product3.detail = "16 GB Ram";
		
		
		Product[] products = {product1, product2, product3};
		
		for (Product product : products) {
			System.out.println(product.name);
		}
		
		System.out.println(products.length);
		
		Category category1 = new Category();
		category1.id = 1;
		category1.name = "Bilgisayar";
		
		Category category2 = new Category();
		category2.id = 2;
		category2.name = "Ev / Bahçe";
		
		
		ProductManager productManager = new ProductManager();
		productManager.addToCart(product1);
	}
}
